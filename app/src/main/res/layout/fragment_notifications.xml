<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ar.edu.utn.frba.myapplication.NotificationsFragment">

    <EditText android:id="@+id/topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insert Topic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/suscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suscribirse"/>
        <Button android:id="@+id/unsuscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desuscribirse"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:text="Firebase Token ID"/>
    <TextView
        android:id="@+id/token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargando..."/>
</LinearLayout>
